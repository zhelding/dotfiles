#!/bin/sh

STATUS=$(pymodoro -o -ah)
PREFIX=${STATUS:0:1}

if [ "$PREFIX" = "P" ]; then
    echo %{T2}üçÖ%{T-} ${STATUS: -5}
elif [ "${STATUS: -3}" != "min" ] && [ "${STATUS: -1}" != "h" ] \
    && [ ! -z "$STATUS" ]; then
    echo %{T2}‚òï%{T-} ${STATUS: -5}
    if [ "${STATUS: -2}" = "00" ]; then
        notify-send 'DUNST_COMMAND_RESUME'
    fi
else
    echo
fi
